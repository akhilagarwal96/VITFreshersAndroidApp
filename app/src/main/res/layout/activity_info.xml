<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bcgd">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/akhil"
        android:id="@+id/developer1"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/developer2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/developer1"
        android:layout_marginTop="90dp"
        android:id="@+id/developer2" />

    <ImageView
        android:layout_width="165dp"
        android:layout_height="125dp"
        android:id="@+id/adg_img"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/adg"
        android:contentDescription="@string/desc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Akhil Agarwal"
        android:textColor="@color/white"
        android:id="@+id/name_dev1"
        android:layout_below="@+id/developer1"
        android:layout_alignEnd="@+id/developer1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tanmay Jha"
        android:textColor="@color/white"
        android:id="@+id/name_dev2"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/developer2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Developer"
        android:textColor="@color/white"
        android:id="@+id/pos_dev1"
        android:layout_below="@+id/name_dev1"
        android:layout_alignStart="@+id/name_dev1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Developer"
        android:textColor="@color/white"
        android:id="@+id/pos_dev2"
        android:layout_below="@+id/name_dev2"
        android:layout_alignStart="@+id/name_dev2"/>

</RelativeLayout>