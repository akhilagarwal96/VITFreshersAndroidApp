<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sell_cards">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="@android:color/transparent"
        android:layout_below="@+id/sell_button">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_ex"
                android:gravity="left"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_ex"
                android:textColor="@color/white"
                android:layout_below="@+id/name_ex"
                android:gravity="left"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_ex"
                android:textColor="@color/white"
                android:layout_below="@+id/location_ex"
                android:gravity="left"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_ex"
                android:textColor="@color/white"
                android:gravity="center|right"
                android:layout_marginRight="10dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>